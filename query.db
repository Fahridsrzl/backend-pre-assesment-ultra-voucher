// untuk membuat tabel seperti contoh

CREATE TABLE children (
  id INT PRIMARY KEY,
  name VARCHAR(255) NOT NULL,
  parent_id INT
);

INSERT INTO children (id, name, parent_id)
VALUES
  (1, 'Zaki', 2),
  (2, 'Ilham', NULL),
  (3, 'Irwan', 2),
  (4, 'Arka', 3);

// untuk menghasilkan data

SELECT
  c.id,
  c.name,
  p.name AS parent_name
FROM
  children AS c
LEFT JOIN children AS p
  ON c.parent_id = p.id
ORDER BY
  c.id;
